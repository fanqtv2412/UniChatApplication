@{
    ViewData["Title"] = "Report";
}

<style>

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: monospace;
    }

    .box {
        background-color: rgb(246, 247, 248);
        padding: 3rem;
        height: 75vh;
        border-radius: 10px;
        box-shadow: 0 0 5px 1px #a7abb7;
        display: flex;
        flex-direction: column;
    }

    .box-list {
        display: flex;
        justify-content: center;
        padding: 1rem;
        height: 80%;
        overflow-y: auto;
        box-shadow: 0 0 5px 1px whitesmoke;
        background-color: white;
    }

    .box-footer {
        width: 100%;
        margin-top: auto;
        display: flex;
        justify-content: space-between;
    }

</style>

<div class="container">

    <h1 class="text-primary text-center">Report Input By File</h1>
    <hr>
    <div class="box">
        <div class="box-list">
            <ul>
                @foreach (string item in ViewBag.Result)
                {
                    if (item.StartsWith("Error"))
                    {
                        <li class="text-danger">@item</li>
                    }
                    else{
                        <li class="text-success">@item</li>
                    }
                }
            </ul>
        </div>
        <div class="box-footer">
            <a asp-action="Create" class="btn btn-danger">Back</a>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-primary">AdminPage</a>
        </div>
    </div>
</div>