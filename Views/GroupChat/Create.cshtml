@{
    ViewData["Title"] = "CreateGroupChat";
}
@model GroupChat


<style>

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: monospace;
    }

    .container {
        margin-top: 80px;
        border-radius: 10px;
        box-shadow: 0 0 5px 1px blue;
        padding: 2rem;
    }

</style>

<div class="container">

    <h2 class="text-center text-primary">Create new GroupChat for [@ViewBag.RoomChat.Class.Name - @ViewBag.RoomChat.Subject.SubjectCode]</h2>
    <hr>
    <form method="Post">
        <p class="text-center text-danger">@ViewBag.ErrorMessage</p>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Enter your group name">
        </div>
        <div class="form-group">
            <a asp-controller="Box" asp-action="RoomChat" asp-route-id="@ViewBag.RoomChat.Id" class="btn btn-danger">Back</a>
            <input type="submit" class="btn btn-primary" value="Create">
        </div>

    </form>

</div>